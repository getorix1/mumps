max_docs=1000000

export max_docs
compile="no"

echo "	Database name not given - default ohsu database used"
DB="ohsu"

export DB

echo $DB > DBPREFIX

	if [ "$compile" = "yes" ]; then
		mumpsc ./reformat.mps
		./reformat < $DB.medline > $DB.converted
	else
		./reformat.mps < $DB.medline > $DB.converted
	fi

echo "Documents converted: `wc -l $DB.converted`"
echo "No. titles: `wc -l titles.list`"

wc -l titles.list > MAXDOCS

./endtime.mps
